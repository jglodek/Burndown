<div>
<h1>EDIT EMAIL MATE!</h1>

<%= raw activerecord_error_list(@current_user.errors) %>

<%= form_for @current_user, :url => account_change_email_path do |f| %>
	<div class = 'field'>
	<%= f.label :email %>
	<%= f.text_field :email %>
	</div>
	<div class = 'field'>
	<%= f.label :email_confirmation %>
	<%= f.text_field :email_confirmation %>
	</div>
	<div class = 'action'>
	<%= f.submit 'Change email!' %>
	</div>
<% end %>
</div>
